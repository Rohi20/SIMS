@using SIMSWeb.Model.Models

@model User
@{
    ViewData["Title"] = "My Profile";
}

<div class="card mb-3" style="max-width: 20rem;">
    <div class="card-header h5 fw-bold">My Profile</div>
    <div class="card-body">
        <div class="row g-3 align-items-center">
            <div class="col-auto">
                <label class="col-form-label card-body fw-bold">Name:</label>
            </div>
            <div class="col-auto">
                @Model.Name 
            </div>
        </div>
        <div class="row g-3 align-items-center">
            <div class="col-auto">
                <label class="col-form-label card-body fw-bold">Email:</label>
            </div>
            <div class="col-auto">
                @Model.Email
            </div>
        </div>
        <div class="row g-3 align-items-center">
            <div class="col-auto">
                <label class="col-form-label card-body fw-bold">Designation:</label>
            </div>
            <div class="col-auto">
                @Model.Role
            </div>
        </div>
    </div>
</div>
