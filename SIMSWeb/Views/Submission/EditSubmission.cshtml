@using SIMSWeb.Model.ViewModels

@{
    ViewData["Title"] = "Edit Submission";
}

@model SubmissionViewModel;

<form method="post" asp-action="EditSubmission" asp-controller="Assignment">
    <input asp-for="@Model.Id" name="Id" hidden />
    <input asp-for="@Model.StudentId" name="StudentId" hidden />

    <div class="p-3 pt-4 gap-2">
        <div class="row">
            <h2>@ViewData["Title"]</h2>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly"></div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mb-3">
            <label>Assignment Title</label>
            <input asp-for="@Model.AssignmentName" type="text" class="form-control"
                   disabled />
        </div>
        <div class="mb-3">
            <label>Student Name</label>
            <input asp-for="@Model.StudentName" name="StudentName" type="text" class="form-control"
                   disabled />
        </div>
        <div class="mb-3">
            <label>Score obtained</label>
            <input asp-for="@Model.Score" name="Score" type="number" class="form-control" />
            <span asp-validation-for="@Model.Score" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Feedback</label>
            <textarea asp-for="@Model.Feedback" rows="5" maxlength="250"
                      name="Feedback" type="text" class="form-control"></textarea>
            <input type="hidden" asp-for="@Model.Feedback" name="Feedback" />
        </div>
        <div class="mb-3">
            <label>Submitted on</label>
            <input asp-for="@Model.SubmittedAt" name="SubmittedAt" type="date" class="form-control" />
            <span asp-validation-for="@Model.SubmittedAt" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-primary" asp-action="EditSubmission" asp-route-assignmentId="@ViewBag.AssignmentId"
                        asp-route-courseId="@ViewBag.CourseId" asp-controller="Submission">
                    Update
                </button>
                <a asp-controller="Submission" asp-action="ViewSubmissions" class="btn btn-outline-primary"
                   asp-route-courseId="@ViewBag.CourseId" asp-route-assignmentId="@ViewBag.AssignmentId">
                    Cancel
                </a>
            </div>
        </div>
    </div>
</form>

