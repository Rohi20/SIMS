@using SIMSWeb.Model.Models

@model List<User>
@{
    ViewData["Title"] = "Manage Users";
}

<div class="container">
    <div class="row pt-4 pb-3 align-items-center">
        <div class="col-6">
            <h2>Manage Users</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="AddUsers" asp-controller="Users" class="btn btn-primary"><i class="bi bi-plus-circle me-2"></i>Add Users</a>
        </div>
    </div>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Designation</th>
                <th>Course</th>
                <th colspan="2"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="col-2">@item.Name</td>
                    <td class="col-3">@item.Email</td>
                    <td class="col-2">@item.Role</td>
                    <td class="col-2"></td>
                    <td>
                        <span>
                            <a asp-action="EditUser" asp-controller="Users" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                        </span>
                        <span>
                            <a asp-action="Delete" asp-controller="Users" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </span>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
