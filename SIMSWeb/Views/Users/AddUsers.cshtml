@using SIMSWeb.Model.Models
@using SIMSWeb.ConstantsAndUtilities;

@model User
<form method="post" asp-controller="Users" asp-action="AddUsers">
    <div class="p-3 pt-4 gap-2">
        <div class="row">
            <h2>Add User</h2>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mb-3">
            <label>User Name</label>
            <input asp-for="Name" type="text" class="form-control" />
            <span asp-validation-for="Name" class="text-danger" />
        </div>
        <div class="mb-3">
            <label>Email</label>
            <input asp-for="Email" type="email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Password</label>
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label>Role</label>
            <select asp-for="Role" class="form-control">
                <option value=@UsersConstants.ADMIN_ROLE>Admin</option>
                <option value=@UsersConstants.TEACHER_ROLE>Teacher</option>
                <option value=@UsersConstants.STUDENT_ROLE>Student</option>
            </select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-primary">Add</button>
                <a asp-controller="Users" asp-action="ManageUsers" type="button" class="btn btn-outline-primary">Cancel</a>
            </div>
        </div>
    </div>
</form>


@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
