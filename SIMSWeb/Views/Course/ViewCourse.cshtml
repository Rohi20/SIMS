@using SIMSWeb.Models.Course
@{
    ViewData["Title"] = "View Course";
}

@model ViewCourseModel;

<style>
    .control-label {
        width: 150px;
    }
</style>

<div class="container">
    <input asp-for="@Model.Id" name="Id" hidden />
    <div class="row col-12">
        <div class="card mb-3">
            <div class="card-header h5 fw-bold">Course Details</div>
            <div class="card-body">
                <div class="row g-3 align-items-center">
                    <div class="col-auto">
                        <label class="col-form-label control-label card-body fw-bold">Course Name:</label>
                    </div>
                    <div class="col-auto">
                        @Model.Name
                    </div>
                </div>
                <div class="row g-3 align-items-center">
                    <div class="col-auto">
                        <label class="col-form-label control-label card-body fw-bold">Teacher name:</label>
                    </div>
                    <div class="col-auto">
                        @(!string.IsNullOrEmpty(Model?.TeacherName) ? Model.TeacherName : "")
                    </div>
                </div>
                <div class="row g-3 align-items-center">
                    <div class="col-auto">
                        <label class="col-form-label control-label card-body fw-bold">Status:</label>
                    </div>
                    <div class="col-auto">
                        @(Model.IsActive ? "Active" : "Not Active")
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row col-12">
        <div class="card mb-3">
            <div class="card-header h5 fw-bold">Faculty Details</div>
            <div class="card-body">
                <div class="row g-3 align-items-center">
                    <div class="col-auto">
                        <label class="col-form-label control-label card-body fw-bold">Teacher Name:</label>
                    </div>
                    <div class="col-auto">
                        @Model.TeacherName
                    </div>
                </div>
                <div class="row g-3 align-items-center">
                    <div class="col-auto">
                        <label class="col-form-label control-label card-body fw-bold">Department</label>
                    </div>
                    <div class="col-auto">
                        @Model.Department
                    </div>
                </div>
                <div class="row g-3 align-items-center">
                    <div class="col-auto">
                        <label class="col-form-label control-label card-body fw-bold">Date Joined</label>
                    </div>
                    <div class="col-auto">
                        @(Model?.TeacherHireDate != null ? Model.TeacherHireDate : "")
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (Model?.Students != null && Model.Students.Any())
    {
        <div class="row col-12">
            <div class="card mb-3">
                <div class="card-header h5 fw-bold">Student Details</div>
                <div class="card-body">
                    <table class="table table-striped table-bordered">
                        <tbody>
                            <tr>
                                <th>#</th>
                                <th>Student Name</th>
                                <th>Enrollment Date</th>
                                <th>Term</th>
                                <th>Score</th>
                                <th>Remarks</th>
                                <th></th>
                            </tr>
                            @foreach (var student in Model.Students.Select((value, index) => (value, index)))
                            {
                                <tr>
                                    <td class="col-1">@(student.index  + 1)</td>
                                    <td class="col-2">@student.value.StudentName</td>
                                    <td class="col-2">@student.value.EnrollmentDate</td>
                                    <td class="col-1">
                                        @student.value.Term
                                    </td>
                                    <td class="col-1">
                                        @student.value.Marks
                                    </td>
                                    <td>
                                        @student.value.Comments
                                    </td>
                                    <td></td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>
