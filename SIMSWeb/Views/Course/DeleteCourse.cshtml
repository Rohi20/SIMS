@using SIMSWeb.Models.Course
@{
    ViewData["Title"] = "Delete Course";
}

@model DeleteCourseModel

<form method="post" asp-controller="Course" asp-action="DeleteCourse">
    <input asp-for="@Model.Id" name="Id" hidden />
    <div class="p-3 pt-4 gap-2">
        <div class="row text-danger">
            <h2>Delete Course</h2>
            <hr />
        </div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mb-3">
            <label>Course Name</label>
            <input asp-for="Name" name="Name" disabled type="text" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Teacher</label>
            <input asp-for="TeacherName" name="TeacherName" disabled type="text" class="form-control" />           
        </div>
        <div class="row mb-3">
            <div class="col-1">
                <label class="form-label">Active</label>
            </div>
            <div class="col-1">
                <input name="IsActive" type="checkbox" checked disabled class="form-check" />
            </div>
        </div>

        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-controller="Course" asp-action="ManageCourses" class="btn btn-outline-primary">Cancel</a>
            </div>
        </div>
    </div>
</form>
